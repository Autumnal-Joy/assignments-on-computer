{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell", // 可以为shell或process，前者相当于先打开shell再输入命令，后者是直接运行命令
      "label": ".cpp to .exe",
      "command": "g++", // 要使用的编译器
      "args": [
        // "${file}",
        "code/create.cpp",
        "code/queue.cpp",
        "code/tree.cpp",
        "test/test.cpp",
        "-o",
        "assignment3.exe",
        "-g", // 生成和调试有关的信息
        "-Wall" // 开启额外警告
      ],
      "group": {
        "kind": "build",
        "isDefault": true // ctrl+shift+B 编译当前文件
      }
    },
    {
      "type": "shell", // 可以为shell或process，前者相当于先打开shell再输入命令，后者是直接运行命令
      "label": ".c to .exe",
      "command": "gcc", // 要使用的编译器
      "args": [
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}.exe",
        "-g", // 生成和调试有关的信息
        "-Wall" // 开启额外警告
      ],
      "group": {
        "kind": "build",
        "isDefault": true // ctrl+shift+B 编译当前文件
      }
    }
  ]
}